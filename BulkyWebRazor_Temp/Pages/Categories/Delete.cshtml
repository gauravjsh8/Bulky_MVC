@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">

    <input asp-for="Category.Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
         <div class="mb-3 row">
            <label asp-for="Category.Name"> </label>
            <input asp-for="Category.Name" type="text" class="form-control" />
         </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder"> </label>
            <input asp-for="Category.DisplayOrder" type="text" class="form-control" />
 
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-danger form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}